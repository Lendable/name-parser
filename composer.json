{
    "name": "lendable/name-parser",
    "description": "PHP library for parsing a string containing a full name into its parts",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "The Iconic",
            "email": "engineering@theiconic.com.au"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "php-mock/php-mock-phpunit": "^2.14",
        "rector/rector": "^2.3",
        "php-cs-fixer/shim": "^3.92",
        "lendable/composer-license-checker": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "TheIconic\\NameParser\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\TheIconic\\NameParser\\": ["tests/"]
        }
    },
    "config": {
        "platform": {
            "php": "8.3"
        }
    },
    "scripts": {
        "code-style:fix": [
            "php-cs-fixer fix --diff --ansi --using-cache=no"
        ],
        "code-style:check": [
            "php-cs-fixer fix --dry-run --diff --ansi --using-cache=no"
        ],
        "licenses:check": [
            "composer-license-checker"
        ],
        "rector:check": [
            "rector --dry-run --ansi --no-progress-bar"
        ],
        "rector:fix": [
            "rector --ansi --no-progress-bar"
        ]
    }
}
